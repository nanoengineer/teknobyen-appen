<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/tbYellow"
    tools:context="tbcoders.teknobyen.washingMachine">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BTN_cardUse"
        android:src="@drawable/btn_cardinuse"
        android:background="@color/tbYellow"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="69dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BTN_washingS"
        android:src="@drawable/btn_washing_status"
        android:background="@color/tbYellow"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/BTN_cardUse"
        android:layout_alignStart="@+id/BTN_cardUse"
        android:layout_marginTop="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/status"
        android:id="@+id/textView4"
        android:textColor="@color/logoDefault"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/BTN_washingS"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/refill"
        android:id="@+id/textView5"
        android:textColor="@color/logoDefault"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp" />
    </RelativeLayout>