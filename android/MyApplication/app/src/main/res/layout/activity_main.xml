<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/genBackground"
    tools:context="tbcoders.teknobyen.MainActivity">


    <ImageButton
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:scaleType="fitCenter"
        android:id="@+id/BTN_washMachine"
        android:src="@drawable/btn_washmachine"
        android:background="@color/genBackground"
        android:layout_below="@+id/BTN_projector"
        android:layout_alignLeft="@+id/BTN_projector"
        android:layout_alignStart="@+id/BTN_projector"
        android:layout_marginTop="28dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BTN_projector"
        android:src="@drawable/btn_projector"
        android:background="@color/genBackground"
        android:focusableInTouchMode="true"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:scaleType="fitCenter"
        android:id="@+id/BTN_washList"
        android:src="@drawable/btn_washlist"
        android:background="@color/genBackground"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/BTN_washMachine"
        android:layout_alignStart="@+id/BTN_washMachine"
        android:layout_marginBottom="38dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/projector"
        android:id="@+id/textView"
        android:textColor="@color/logoDefault"
        android:layout_alignBottom="@+id/BTN_projector"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/washingmachine"
        android:id="@+id/textView2"
        android:textColor="@color/logoDefault"
        android:layout_below="@+id/BTN_washMachine"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/washinglist"
        android:id="@+id/textView3"
        android:textColor="@color/logoDefault"
        android:layout_marginBottom="21dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:id="@+id/btn_stemmer_det"
        android:src="@drawable/btn_stemmer_det"
        android:background="@color/genBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_settings"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/btn_settings"
        android:background="@color/genBackground" />

</RelativeLayout>
