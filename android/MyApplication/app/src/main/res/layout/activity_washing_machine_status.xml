<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/machineStatusSwipe"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/machine0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/washingmachineUnavailable"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView0"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:foreground="@mipmap/washing_machine_status_icon"
                        android:foregroundGravity="fill_horizontal|center|fill_vertical"
                        android:foregroundTint="@android:color/background_light" />

                    <TextView
                        android:id="@+id/statusText0"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="top|center"
                        android:lines="2"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:singleLine="false"
                        android:text="@string/ingenstatus"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/machine1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/washingmachineUnavailable"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:foreground="@mipmap/washing_machine_status_icon"
                        android:foregroundGravity="fill_horizontal|center|fill_vertical"
                        android:foregroundTint="@android:color/background_light" />

                    <TextView
                        android:id="@+id/statusText1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="top|center"
                        android:lines="2"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:singleLine="false"
                        android:text="@string/ingenstatus"
                        android:textStyle="bold" />

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/machine2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/washingmachineUnavailable"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:foreground="@mipmap/washing_machine_status_icon"
                        android:foregroundGravity="fill_horizontal|center|fill_vertical"
                        android:foregroundTint="@android:color/background_light" />

                    <TextView
                        android:id="@+id/statusText2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="top|center"
                        android:lines="2"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:singleLine="false"
                        android:text="@string/ingenstatus"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/machine3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/washingmachineUnavailable"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:foreground="@mipmap/washing_machine_status_icon"
                        android:foregroundGravity="fill_horizontal|center|fill_vertical"
                        android:foregroundTint="@android:color/background_light" />

                    <TextView
                        android:id="@+id/statusText3"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="top|center"
                        android:lines="2"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:singleLine="false"
                        android:text="@string/ingenstatus"
                        android:textStyle="bold" />

                </LinearLayout>

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/machine4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/washingmachineUnavailable"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:foreground="@mipmap/washing_machine_status_icon"
                        android:foregroundGravity="fill_horizontal|center|fill_vertical"
                        android:foregroundTint="@android:color/background_light" />

                    <TextView
                        android:id="@+id/statusText4"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="top|center"
                        android:lines="2"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:singleLine="false"
                        android:text="@string/ingenstatus"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/machine5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/washingmachineUnavailable"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:foreground="@mipmap/washing_machine_status_icon"
                        android:foregroundGravity="fill_horizontal|center|fill_vertical"
                        android:foregroundTint="@android:color/background_light" />

                    <TextView
                        android:id="@+id/statusText5"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="top|center"
                        android:lines="2"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:singleLine="false"
                        android:text="@string/ingenstatus"
                        android:textStyle="bold" />

                </LinearLayout>

            </TableRow>

        </TableLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:id="@+id/machineBalance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="Balance:"
            android:textAppearance="@android:style/TextAppearance.Large" />

    </LinearLayout>

</LinearLayout>