<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffa5a5"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView00"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:foreground="@mipmap/washing_machine_status_icon"
                    android:scaleType="center"
                    android:layout_margin="5dp"
                    android:foregroundTint="#ffffff" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/statusText00"
                    android:textAlignment="center" />

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffa5a5"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView01"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:foreground="@mipmap/washing_machine_status_icon"
                    android:scaleType="center"
                    android:layout_margin="5dp"
                    android:foregroundTint="#ffffff" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/statusText01"
                    android:textAlignment="center" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#aaffaa"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView10"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:foreground="@mipmap/washing_machine_status_icon"
                    android:scaleType="center"
                    android:layout_margin="5dp"
                    android:foregroundTint="#ffffff" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/statusText10"
                    android:textAlignment="center" />

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#aaffaa"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView11"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:foreground="@mipmap/washing_machine_status_icon"
                    android:scaleType="center"
                    android:layout_margin="5dp"
                    android:foregroundTint="#ffffff" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/statusText11"
                    android:textAlignment="center" />

            </LinearLayout>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffa5a5"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView20"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:foreground="@mipmap/washing_machine_status_icon"
                    android:scaleType="center"
                    android:layout_margin="5dp"
                    android:foregroundTint="#ffffff" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/statusText20"
                    android:textAlignment="center" />

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffa5a5"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView21"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:foreground="@mipmap/washing_machine_status_icon"
                    android:scaleType="center"
                    android:layout_margin="5dp"
                    android:foregroundTint="#ffffff" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/statusText21"
                    android:textAlignment="center" />

            </LinearLayout>

        </TableRow>
    </TableLayout>

</android.support.v4.widget.SwipeRefreshLayout>
